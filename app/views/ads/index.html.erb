<p id="notice"><%= notice %></p>
<% if admin_signed_in? %>
<%= link_to "New Ad", '/ads/new', class: 'btn btn-success' %>
<% end %>
<center><h1>Og≈Çoszenia</h1></center>

<% @ads.each do |ad| %>

<div class="col-md-2">
    <%= image_tag ad.image, class: "img-responsive" %>
</div>

  <div class="col-md-10">
    <div class="col-md-12">
    <% if admin_signed_in? %>
      <%= link_to "Edit Ad", "/ads/#{ad.id}/edit", class: 'btn btn-info btn-xs' %>
      <%= link_to "Delete Ad", ad, class: 'btn btn-danger btn-xs', method: :delete, data: {confirm: 'Are you sure?'} %>
       <%= link_to 'Clone', "ads/#{ad.id}/clone", class: 'btn btn-warning btn-xs' %>
      <% end %>
      <h4><%= link_to ad.title, ad %></h4>
    </div>

    <div class="col-md-6">
      <strong>Adres:</strong> <%=ad.adress %>, <%= ad.city%>
    </div>
    
    <div class="col-md-6">
      <strong>Price:</strong> <%=ad.price %>
    
    </div>
  </div>
  
<div class="col-md-12">
  <hr>
</div>
<% end %>

<br>

